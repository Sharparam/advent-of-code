[*]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

[*.{rb,rs,py,p6,raku,rakumod,rakudoc,rakutest,lua}]
end_of_line = lf

[*.rs]
indent_size = 4

[*.{py,ipynb}]
indent_size = 4

[*.cs]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
